{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "dnsLabelPrefix": {
      "type": "String",
      "metadata": {
        "description": "DNS Label for the Public IP. Must be lowercase. It should match with the following regular expression: ^[a-z][a-z0-9-]{1,61}[a-z0-9]$ or it will raise an error."
      }
    },
    "publicIPAddressType": {
      "defaultValue": "Dynamic",
      "allowedValues": [
        "Dynamic",
        "Static"
      ],
      "type": "String",
      "metadata": {
        "description": "Type of public IP address"
      }
    },
    "sku": {
      "defaultValue": "Basic",
      "allowedValues": [
        "Basic",
        "Standard"
      ],
      "type": "String"
    },
    "idleTimeoutInMinutes": {
      "type": "Int",
      "defaultValue": 4
    },
    "publicIpAddressVersion": {
      "type": "String",
      "defaultValue": "IPv4",
      "allowedValues": [
        "IPv4",
        "IPv6"
      ]
    },
    "publicIPCount": {
      "defaultValue": 1,
      "minValue": 1,
      "maxValue": 5,
      "type": "Int",
      "metadata": {
        "description": "Number of public IP addresses to create"
      }
    }
  },
  "variables": {
    "publicIPAddressNamePrefix": "m1-publicIp"
  },
  "resources": [
    {
      "type": "Microsoft.Network/publicIPAddresses",
      "name": "[concat(variables('publicIPAddressNamePrefix'),copyIndex())]",
      "apiVersion": "2015-06-15",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "publicIPLoop",
        "count": "[parameters('publicIPCount')]"
      },
      "properties": {
        "publicIPAllocationMethod": "[parameters('publicIPAddressType')]",
        "idleTimeoutInMinutes": "[parameters('idleTimeoutInMinutes')]",
        "publicIpAddressVersion": "[parameters('publicIpAddressVersion')]",
        "dnsSettings": {
          "domainNameLabel": "[concat(parameters('dnsLabelPrefix'),uniqueString(resourceGroup().id))]"
        }
      }
    }
  ],
  "outputs": {
    "publicIPPrefix": {
      "type": "String",
      "value": "[variables('publicIPAddressNamePrefix')]"
    }
  }
}